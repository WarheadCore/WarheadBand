ArenaReward.Reward.Rating.ItemID = 37711
ArenaReward.Reward.Rating.ItemCount.WinnerTeam = 3
ArenaReward.Reward.Rating.ItemCount.LoserTeam = 1

#
#    ArenaReward.Reward.Skirmish.Enable
#        Description: Enable add item after win/lose arena
#        Default: 1
#
#    ArenaReward.Reward.Skirmish.ItemID
#        Description: Item for reward skirmish arena
#        Default: 37711
#
#
#    ArenaReward.Reward.Skirmish.ItemCount.WinnerTeam
#        Description: Item count for reward skirmish arena
#        Default: 3
#
#
